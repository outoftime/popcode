{
  "extends": ["config:base"],
  "masterIssue": true,
  "masterIssueAutoclose": true,
  "packageRules": [
    {
      "groupName": "Babel",
      "packageNames": [
        "babel-eslint",
        "babel-loader",
        "babel-plugin-dynamic-import-node",
        "core-js",
        "regenerator-runtime"
      ],
      "packagePatterns": ["^@babel/"]
    },
    {
      "groupName": "Bugsnag",
      "packagePatterns": ["^@bugsnag/"]
    },
    {
      "groupName": "eslint",
      "automerge": true,
      "packageNames": [
        "eslint",
        "eslint-config-prettier",
        "eslint_d",
        "@popcodeorg/eslint-import-resolver-jest",
        "eslint-import-resolver-webpack",
        "eslint-plugin-import",
        "eslint-plugin-jest",
        "eslint-plugin-prettier",
        "eslint-plugin-private-props",
        "eslint-plugin-promise",
        "eslint-plugin-react"
      ]
    },
    {
      "groupName": "Font Awesome",
      "packagePatterns": ["^@fortawesome/"]
    },
    {
      "groupName": "gulp",
      "packageNames": ["gulp", "gulp-concat", "gulp-postcss", "gulp-sourcemaps"]
    },
    {
      "groupName": "i18next",
      "packageNames": ["i18next", "i18next-resource-store-loader"]
    },
    {
      "groupName": "Immutable.js",
      "packageNames": ["immutable", "immutable-devtools"]
    },
    {
      "groupName": "Jest",
      "automerge": true,
      "packageNames": ["jest", "jest-extended"]
    },

    {
      "groupName": "Karma",
      "automerge": true,
      "packageNames": [
        "karma",
        "karma-browserstack-launcher",
        "karma-chrome-launcher",
        "karma-firefox-launcher",
        "karma-safari-launcher",
        "karma-sinon",
        "karma-sourcemap-loader",
        "karma-tap",
        "karma-webpack"
      ]
    },
    {
      "groupName": "lodash",
      "packageNames": ["lodash-es"],
      "packagePatterns": ["^lodash\\."]
    },
    {
      "groupName": "Node.js",
      "packageNames": ["node"],
      "automerge": false
    },
    {
      "groupName": "React",
      "packageNames": ["prop-types", "react", "react-dom"]
    },
    {
      "groupName": "Redux",
      "packageNames": ["react-redux", "redux"]
    },
    {
      "groupName": "Redux Saga",
      "packageNames": [
        "redux-saga",
        "@redux-saga/testing-utils",
        "redux-saga-test-plan"
      ]
    },
    {
      "groupName": "Remark",
      "packageNames": [
        "hast-util-sanitize",
        "remark",
        "remark-external-links",
        "remark-react",
        "remark-react-lowlight"
      ]
    },
    {
      "packageNames": ["source-map"],
      "allowedVersions": "< 0.7.0"
    },
    {
      "groupName": "stylelint",
      "automerge": true,
      "packageNames": [
        "stylelint",
        "stylelint-config-prettier",
        "stylelint-prettier",
        "stylelint-selector-bem-pattern"
      ]
    },
    {
      "groupName": "Tape",
      "automerge": true,
      "packageNames": ["tape", "tape-catch"]
    },
    {
      "groupName": "Webpack",
      "packageNames": [
        "circular-dependency-plugin",
        "eslint-loader",
        "exports-loader",
        "hard-source-webpack-plugin",
        "html-webpack-plugin",
        "imports-loader",
        "json-loader",
        "null-loader",
        "offline-plugin",
        "raw-loader",
        "script-ext-html-webpack-plugin",
        "source-map-loader",
        "stats-webpack-plugin",
        "string-replace-loader",
        "substitute-loader",
        "svg-react-loader",
        "svgo-loader",
        "transform-loader",
        "val-loader",
        "webpack",
        "webpack-dev-middleware",
        "webpack-visualizer-plugin"
      ]
    },
    {
      "packagePatterns": [
        "browser-sync",
        "doctoc",
        "is-docker",
        "jquery",
        "jscodeshift",
        "p5",
        "prettier",
        "sinon",
        "rosie",
        "yarn-deduplicate"
      ],
      "automerge": true
    }
  ],
  "patch": {
    "automerge": true,
    "prConcurrentLimit": 0
  },
  "postUpdateOptions": ["yarnDedupeFewer"],
  "prConcurrentLimit": 3,
  "rebaseStalePrs": true,
  "reviewers": ["outoftime"],
  "separateMinorPatch": true
}
